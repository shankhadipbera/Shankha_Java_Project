<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <HorizontalScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_margin="6dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <Button
             android:id="@+id/btn_business"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="business"
             android:textSize="14sp" />

         <Button
             android:id="@+id/btn_general"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="general"
             android:textSize="14sp" />

         <Button
             android:id="@+id/btn_entertainment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="entertainment"
             android:textSize="14sp" />

         <Button
             android:id="@+id/btn_health"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="health"
             android:textSize="14sp" />

         <Button
             android:id="@+id/btn_science"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="science"
             android:textSize="14sp" />

         <Button
             android:id="@+id/btn_sports"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="sports"
             android:textSize="14sp" />

         <Button
             android:id="@+id/btn_technology"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:backgroundTint="#8F8686"
             android:text="technology"
             android:textSize="14sp" />

      </LinearLayout>

   </HorizontalScrollView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
         android:layout_margin="8dp"
         app:cardElevation="8dp">
      <androidx.appcompat.widget.SearchView
          android:layout_width="match_parent"
          android:layout_height="55dp"
         android:id="@+id/search"
          app:iconifiedByDefault="false"
          app:defaultQueryHint="Enter News Topic"/>


   </androidx.cardview.widget.CardView>
   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="10dp"
       android:padding="2dp"
       android:id="@+id/recy_main">


   </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>